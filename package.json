{
  "name": "copilot-ld",
  "version": "0.1.0",
  "description": "Intelligent chat agent built GitHub Copilot and Linked Data",
  "license": "Apache-2.0",
  "author": "D. Olsson <hi@senzilla.io>",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "workspaces": [
    "packages/*",
    "services/*",
    "extensions/*",
    "scripts"
  ],
  "scripts": {
    "data:init": "mkdir -p generated data/memories data/policies data/resources data/graphs data/vectors",
    "data:clean": "rm -rf generated data/memories data/policies data/resources data/graphs data/vectors",
    "data:reset": "npm run data:clean && npm run data:init && npm run codegen",
    "codegen": "npx --workspace=@copilot-ld/libcodegen codegen --all",
    "codegen:type": "npx --workspace=@copilot-ld/libcodegen codegen --type",
    "codegen:client": "npx --workspace=@copilot-ld/libcodegen codegen --client",
    "codegen:service": "npx --workspace=@copilot-ld/libcodegen codegen --service",
    "codegen:definition": "npx --workspace=@copilot-ld/libcodegen codegen --definition",
    "process": "npm run process:assistants && npm run process:resources && npm run process:tools && npm run process:vectors && npm run process:graphs",
    "process:assistants": "npx env-cmd --silent -- npx --workspace=@copilot-ld/libagent assistants",
    "process:resources": "npx env-cmd --silent -- npx --workspace=@copilot-ld/libresource resources",
    "process:tools": "npx env-cmd --silent -- node ./scripts/tools.js",
    "process:vectors": "npx env-cmd --silent -- npx --workspace=@copilot-ld/libvector vectors",
    "process:graphs": "npx env-cmd --silent -- npx --workspace=@copilot-ld/libgraph graphs",
    "upload": "npx env-cmd --silent -- npx --workspace=@copilot-ld/libutil upload",
    "download": "npx env-cmd --silent -- npx --workspace=@copilot-ld/libutil download",
    "dev": "npm run dev:start",
    "dev:start": "npx env-cmd -- node scripts/dev.js --start",
    "dev:stop": "npx env-cmd -- node scripts/dev.js --stop",
    "dev:restart": "npm run dev:stop && npm run dev:start",
    "docker": "npm run docker:build && npm run docker:up",
    "docker:build": "env-cmd -f .env.build -- docker compose build --no-cache",
    "docker:up": "docker compose up",
    "docs": "npm run docs:serve",
    "docs:build": "npx --workspace=@copilot-ld/libdoc docs-build",
    "docs:serve": "npx --workspace=@copilot-ld/libdoc docs-serve",
    "docs:watch": "npx --workspace=@copilot-ld/libdoc docs-serve --watch",
    "test": "find packages services test -name '*.test.js' | xargs node --test",
    "test:watch": "find packages services test -name '*.test.js' | xargs node --test --watch",
    "perf": "find packages services -name '*.perf.js' | xargs node --expose-gc --test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write --list-different .",
    "spellcheck": "spellchecker --quiet --files '**/*.md' '**/*.html' '!eval/**' '!examples/**' --dictionaries .dictionary.txt --no-suggestions",
    "spellcheck:eval": "spellchecker --quiet --files 'eval/**/*.md' 'eval/**/*.html' --dictionaries .dictionary.eval.txt --no-suggestions",
    "check": "npm run spellcheck && npm run format && npm run lint",
    "check:fix": "npm run spellcheck && npm run format:fix && npm run lint:fix",
    "security": "npm audit --audit-level=low --workspaces",
    "chat": "npx env-cmd -- node ./scripts/dev.js --start --quiet && npx env-cmd -- node ./scripts/chat.js",
    "search": "npx env-cmd -- node ./scripts/dev.js --start --quiet && npx env-cmd -- node ./scripts/search.js",
    "query": "npx env-cmd -- node ./scripts/dev.js --start --quiet && npx env-cmd -- node ./scripts/query.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@eslint/json": "^0.13.1",
    "@eslint/markdown": "^7.1.0",
    "env-cmd": "^11.0.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsdoc": "^52.0.4",
    "globals": "^16.3.0",
    "gray-matter": "^4.0.3",
    "html-minifier-terser": "^7.2.0",
    "marked": "^14.1.0",
    "marked-gfm-heading-id": "^4.1.0",
    "marked-highlight": "^2.1.0",
    "mustache": "^4.2.0",
    "prettier": "^3.6.2",
    "protobufjs": "^7.4.0",
    "protobufjs-cli": "^1.1.1",
    "simple-git-hooks": "^2.13.1",
    "spellchecker-cli": "^7.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run check:fix && git add -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/copilot-ld/copilot-ld.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "n3": "^1.26.0"
  }
}
