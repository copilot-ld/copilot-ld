{
  "name": "@copilot-ld/libharness",
  "version": "0.1.5",
  "description": "Test harness and mock infrastructure for copilot-ld tests",
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./mock": "./mock/index.js",
    "./fixture": "./fixture/index.js"
  },
  "files": [
    "index.js",
    "mock/**/*.js",
    "fixture/**/*.js",
    "README.md"
  ],
  "scripts": {
    "test": "node --test test/*.test.js"
  },
  "keywords": [
    "test",
    "mock",
    "fixture",
    "harness"
  ],
  "author": "Copilot-LD Team",
  "license": "MIT",
  "peerDependencies": {
    "@copilot-ld/libtype": "*"
  }
}
