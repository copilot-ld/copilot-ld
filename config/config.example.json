{
  "init": {
    "log_dir": "data/logs",
    "shutdown_timeout": 3000,
    "services": [
      {
        "name": "trace",
        "command": "npx env-cmd -- npm run dev -w @copilot-ld/trace"
      },
      {
        "name": "vector",
        "command": "npx env-cmd -- npm run dev -w @copilot-ld/vector"
      },
      {
        "name": "graph",
        "command": "npx env-cmd -- npm run dev -w @copilot-ld/graph"
      },
      {
        "name": "llm",
        "command": "npx env-cmd -- npm run dev -w @copilot-ld/llm"
      },
      {
        "name": "memory",
        "command": "npx env-cmd -- npm run dev -w @copilot-ld/memory"
      },
      {
        "name": "tool",
        "command": "npx env-cmd -- npm run dev -w @copilot-ld/tool"
      },
      {
        "name": "agent",
        "command": "npx env-cmd -- npm run dev -w @copilot-ld/agent"
      },
      {
        "name": "web",
        "command": "npx env-cmd -- npm run dev -w @copilot-ld/web"
      },
      {
        "name": "ui",
        "command": "npx env-cmd -- npm run dev -w @copilot-ld/ui"
      }
    ]
  },
  "evals": {
    "models": ["openai/gpt-4.1"],
    "judge_model": "openai/gpt-4.1"
  },
  "service": {
    "agent": {
      "agent": "graph_traverser",
      "model": "openai/gpt-4.1"
    },
    "llm": {
      "temperature": 0.3
    },
    "tool": {
      "filter": {
        "threshold": 0.48,
        "max_tokens": null
      },
      "endpoints": {
        "get_ontology": {
          "method": "graph.Graph.GetOntology",
          "request": "common.Empty"
        },
        "get_subjects": {
          "method": "graph.Graph.GetSubjects",
          "request": "graph.SubjectsQuery"
        },
        "query_by_pattern": {
          "method": "graph.Graph.QueryByPattern",
          "request": "graph.PatternQuery"
        },
        "search_content": {
          "method": "vector.Vector.SearchContent",
          "request": "vector.TextQuery"
        },
        "list_sub_agents": {
          "method": "agent.Agent.ListSubAgents",
          "request": "common.Empty"
        },
        "run_sub_agent": {
          "method": "agent.Agent.RunSubAgent",
          "request": "agent.RunSubAgentRequest"
        },
        "list_handoffs": {
          "method": "agent.Agent.ListHandoffs",
          "request": "agent.ListHandoffsRequest"
        },
        "run_handoff": {
          "method": "agent.Agent.RunHandoff",
          "request": "agent.RunHandoffRequest"
        }
      }
    }
  },
  "extension": {
    "teamsapp": {
      "master_key": null,
      "bot_domain": null,
      "microsoft_app_type": null,
      "microsoft_app_tenant_id": null,
      "microsoft_app_id": null,
      "microsoft_app_password": null
    },
    "api": {
      "secret": null
    }
  }
}
